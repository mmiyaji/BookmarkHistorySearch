{
  "manifest_version": 3,
  "name": "Bookmark & History Search",
  "version": "1.4",
  "description": "Search bookmarks and/or history with AND/OR logic",
  "permissions": [
    "storage",
    "bookmarks",
    "history"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
